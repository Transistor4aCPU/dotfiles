# Pulseaudio
bindsym --locked XF86AudioRaiseVolume exec pamixer -ui 2 && pamixer --get-volume > $SWAYSOCK.wob
bindsym --locked XF86AudioLowerVolume exec pamixer -ud 2 && pamixer --get-volume > $SWAYSOCK.wob
bindsym --locked XF86AudioMute exec pamixer --toggle-mute && ( pamixer --get-mute && echo 0 > $SWAYSOCK.wob )

# Media control
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous

# Display brightness
bindsym XF86MonBrightnessDown exec brightnessctl s 5%- && expr $(brightnessctl g) / 15 $SWAYSOCK.wob 
bindsym XF86MonBrightnessUp exec brightnessctl s +5% && expr $(brightnessctl g) / 15 $SWAYSOCK.wob

# Start application launcher
bindsym $mod+d exec $menu

# Start terminal
bindsym $actl+t exec $term

# Start texteditor
bindsym $actl+e exec $editor

# Start password manager
bindsym $actl+p exec $passwd

# Start mail client
bindsym $actl+m exec $mail

# Start news client
bindsym $actl+n exec $news
